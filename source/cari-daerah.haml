---
title: Cari Daerah Berdasarkan Kode Pos
css_classes: ["l-centered", "p-cari-daerah"]
---

.titles
  %h1 Cari Nama Daerah
  %h2 Berdasarkan Kode Pos

%form.pencarian.cari-daerah{ action: 'http://localhost:3000/places.json', method: 'GET' }
  .field
    %input#place-postalCode(type="text" name="postalCode" placeholder="Contoh: 15310")
    %input#place-offset(type="hidden" name="offset" value="0")
    %input#place-limit(type="hidden" name="limit" value="40")
    %input.submit-inline(type="submit" id="submit-inline" value="Mulai Pencarian")
  .field
    %input.submit-bottom(type="submit" id="submit-bottom" value="Mulai Pencarian")

.places{ "data-template-id" => "template-place", "data-template-no-result-id" => "template-no-result" }

